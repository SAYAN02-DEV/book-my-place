generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User{
  id Int @id @default(autoincrement())
  name String @default("anonymous")
  created_at DateTime @default(now())
  email String @unique
  password String
  oauth Boolean @default(false)
  tickets Ticket[]
}

model Movie {
  id Int @id @default(autoincrement())
  title String
  duration Int
  imageUrl String?
  shows Show[]
}

model Theater{
  id Int @id @default(autoincrement())
  name String @default("anonymous")
  created_at DateTime @default(now())
  email String @unique
  latitude Float
  longitude Float
  address String?
  shows Show[]
}

model Ticket {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  ownerId Int
  owner User @relation(fields: [ownerId], references: [id])
  showId Int
  show Show @relation(fields: [showId], references: [id])
  seats Seat[] 
}

model Show {
  id Int @id @default(autoincrement())
  startTime DateTime
  price Int
  movieId Int
  movie Movie @relation(fields: [movieId], references: [id])
  theaterId Int
  theater Theater @relation(fields: [theaterId], references: [id])
  seats Seat[]
  tickets Ticket[]
}

model Seat {
  id Int @id @default(autoincrement())
  seatNo String
  row String
  isBooked Boolean @default(false)
  lockedAt DateTime?
  showId Int
  show Show @relation(fields: [showId], references: [id])
  tickets Ticket[]
}